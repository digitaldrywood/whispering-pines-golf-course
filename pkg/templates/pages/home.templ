func formatNumber(n int) string {
	s := strconv.Itoa(n)
	if len(s) <= 3 {
		return s
	}
	return s[:len(s)-3] + "," + s[len(s)-3:]
}

func truncateDescription(desc string) string {
	for i, c := range desc {
		if c == '.' {
			return desc[:i+1]
		}
	}
	return desc
}
